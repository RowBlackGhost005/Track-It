<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VerifyAccount">

    <TextView
        android:id="@+id/tvVerifyAccount_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:fontFamily="@font/lato_bold"
        android:text="@string/verifyAccount"
        android:textColor="@color/mainTextColor"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/ivVerifyAccount_accountImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        android:src="@drawable/cuenta"/>

    <TextView
        android:id="@+id/tvVerifyAccount_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/lato_italic"
        android:textFontWeight="700"
        android:text="@string/userNamePlaceHolder"
        android:textColor="@color/mainTextColor"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/tvVerifyAccount_verifyEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:fontFamily="@font/lato_italic"
        android:text="@string/checkEmailPlaceHolder"
        android:textColor="@color/secondTextColor"
        android:textSize="18sp"/>

