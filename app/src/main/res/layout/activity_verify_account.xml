    </LinearLayout>



    <Button
        android:id="@+id/btnVerifyAccount_createAccount"
        android:layout_width="196dp"
        android:layout_height="55dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="@string/returnLogin"
        android:textColor="@color/contrastTextColor"
        android:fontFamily="@font/lato_bold"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tvVerifyAccount_RetryToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:fontFamily="@font/lato_italic"
        android:text="@string/retryLogin"
        android:textColor="@color/secondTextColor"
        android:textSize="14sp"/>

    <GridLayout
        android:id="@+id/glVerifyAccount_disclaimerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvVerifyAccount_privacyDisclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center|bottom"
